{
  "manifest_version": 3,
  "name": "ChatGPT Summarizer",
  "version": "1.0",
  "description": "Summarize the content of a webpage using ChatGPT",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
